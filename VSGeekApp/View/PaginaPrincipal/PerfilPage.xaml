<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSGeekApp.View.PaginaPrincipal.PerfilPage"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="auto,auto,auto,auto">
        <Image 
            VerticalOptions="Start" 
            Source="vsgeek_logo.png"/>
        <Grid 
            Grid.Row="1"
            RowSpacing="20"
            VerticalOptions="Start"
            Padding="40,60,40,0"
            RowDefinitions="auto,auto,auto">
            <Grid RowDefinitions="auto,auto">
                <Label 
                    Text="Email"
                    FontSize="16"/>
                <Border
                    Grid.Row="1" 
                    StrokeShape="RoundRectangle 5">
                    <Entry 
                        Placeholder="Email" 
                        Keyboard="Email" 
                        ClearButtonVisibility="WhileEditing"
                        FontSize="16"/>
                </Border>
            </Grid>
            <Grid 
                Grid.Row="1" 
                RowDefinitions="auto,auto">
                <Label
                    Text="Senha"
                    FontSize="16"/>
                <Border Grid.Row="1" StrokeShape="RoundRectangle 5">
                    <Entry 
                        Placeholder="Senha"
                        Keyboard="Password"
                        FontSize="16"
                        ClearButtonVisibility="WhileEditing"/>
                </Border>
            </Grid>
            <Button 
                Grid.Row="2" 
                FontSize="16"
                TextColor="White"
                BackgroundColor="#e11d48"
                Text="Login"/>
        </Grid>
        <Label 
            Grid.Row="2" 
            HorizontalOptions="Center" 
            Padding="0,10,0,0" 
            Text="Esqueceu a senha?" 
            FontSize="16"/>
        <Grid
            Grid.Row="3"
            ColumnDefinitions="auto,auto" 
            HorizontalOptions="Center">
            <Label 
                Text="NÃ£o tem conta?"  
                FontSize="16"/>
            <Label 
                Grid.Column="1" 
                Margin="5,0,0,0" 
                Text="Criar conta" 
                FontSize="16"
                TextColor="#e11d48"
                FontAttributes="Bold" />
        </Grid>
    </Grid>
</ContentPage>